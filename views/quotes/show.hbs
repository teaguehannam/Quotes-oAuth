<div class="row">
    <div class="col s12 m8">
        <h3>{{quote.author}}
            <small>{{{editIcon quote.user user quote._id false}}}</small>
        </h3>
        <div class="card quote">
            <div class="card-content">
                <span class="card-title">{{formatDate date 'MM/DD/YYYY'}}</span>
                {{{quote.body}}}
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{quote.user.displayName}}</span>
                <img src="{{quote.user.image}}" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="/quotes/user/{{quote.user._id}}">More From {{quote.user.firstName}}</a>
            </div>
        </div>
    </div>
</div>