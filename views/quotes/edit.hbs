<h3>Edit Quote</h3>
<div class="row">
	<form action="/quotes/{{quote._id}}" method="POST" class="col s12">
		<input type="hidden" name="_method" value="PUT">
		<div class="row">
			<div class="input-field">
				<select id="status" name="status">
					{{#select quote.status}}
					<option value="public" selected>Public</option>
					<option value="private">Private</option>
					{{/select}}
				</select>
				<label for="Status">Status</label>
			</div>
		</div>

		<div class="row">
			<div class="input-field">
				<input type="text" id="author" name="author" value="{{quote.author}}">
				<label for="title">Author</label>
			</div>
		</div>

		<div class="row">
			<div class="input-field">
				<input type="text" id="body" name="body" value="{{quote.body}}">
				<label for="title">Quote</label>
			</div>
		</div>

		<div class="row">
			<input type="submit" value="Save" class="btn">
			<a href="/dashboard" class="btn orange">Cancel</a>
		</div>

	</form>
</div>

